@model IEnumerable<MarkelApp.Models.Analysis>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Analysis List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="" asp-controller="Analysis" asp-action="Create">Create New Analysis</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Analysis ID
                    </th>
                    <th>
                        Submission ID
                    </th>
                    <th>
                        Aggregate Limit One
                    </th>
                    <th>
                        Aggregate Limit Two
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var analysis in Model)
                {
                <tr>
                    <td width="25%">@analysis.AnalysisId</td>
                    <td width="25%">@analysis.SubmissionId</td>
                    <td width="25%">@analysis.AggLimit_1</td>
                    <td width="25%">@analysis.AggLimit_2</td>
                </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <h3>No Analyses Exist in Database</h3>
    }
</div>

