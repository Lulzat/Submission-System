@model IEnumerable<MarkelApp.Models.Submission>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Submissions List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="" asp-controller="Submission" asp-action="Create">Create New Submission</a>
        </div>
    </div>
    <br />
    
    @if(Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Submission ID
                        </th>
                        <th>
                            Submission Name
                        </th>
                        <th>
                            Submission Details
                        </th>
                        <th>
                            
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var submission in Model)
                            {
                                <tr>
                                    <td width="25%">@submission.SubmissionId</td>
                                    <td width="25%">@submission.SubmissionName</td>
                                    <td width="25%">@submission.SubmissionDetails</td>
                                    <td width="15%" class="text-center"><a class="btn btn-outline-primary" asp-area="" asp-controller="Submission" asp-action="Details" asp-route-id="@submission.SubmissionId">More Details</a></td>
                                </tr>
                            }
                </tbody>
            </table>    
        }

    else
        {
            <h3>No Submissions Exist in Database</h3>
        }
</div>

